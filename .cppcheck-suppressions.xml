<?xml version="1.0" encoding="UTF-8"?>
<!-- Cppcheck Suppressions File -->
<suppressions>
  <!-- Suppress Arduino framework specific patterns -->
  <suppress>
    <id>unusedFunction</id>
    <fileName>**/main.cpp</fileName>
    <symbolName>setup</symbolName>
  </suppress>
  <suppress>
    <id>unusedFunction</id>
    <fileName>**/main.cpp</fileName>
    <symbolName>loop</symbolName>
  </suppress>
  
  <!-- Suppress missing include warnings for Arduino framework headers -->
  <suppress>
    <id>missingInclude</id>
  </suppress>
  
  <!-- Allow C-style casts in certain embedded contexts -->
  <suppress>
    <id>cstyleCast</id>
    <fileName>**/*.cpp</fileName>
  </suppress>
</suppressions>
